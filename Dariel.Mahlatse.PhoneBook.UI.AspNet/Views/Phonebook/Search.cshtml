
@{
    ViewBag.Title = "Search";
}

<h2>Search Data</h2>

<div class="row">
    <div class="col-md-3">
        <p>Search</p>
    </div>
    <div class="col-md-9">
        @Html.TextBox("searchString", null, new { id = "searchBox", @class = "form-controlcol-md-12" })
    </div>
</div>

<div>
    <div id="search_content">

    </div>
</div>

@section scripts
{
    <script>
             $("#searchBox").on('input',function () {
                $.ajax(
                    {
                        type: "POST",
                        url: '@Url.Action("search")',
                        data: {"searchString": $("#searchBox").val() },
                        success: function (searchData) {
                            $("#search_content").html(searchData)
                        }
                    });
            });
    </script>
}