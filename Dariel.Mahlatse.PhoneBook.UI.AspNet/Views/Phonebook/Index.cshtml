@model IEnumerable<Dariel.Mahlatse.Phonebook.Core.Models.PhoneBookModel>

@{
    ViewBag.Title = "PhoneBooks";
}

<h2>@(Model.Count() > 0 ? $"PhoneBooks : {Model.Count()} Record(s)": "PhoneBooks")</h2>

<div class="row">
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Create New", "EditPhonebook")
        </p>
    </div>
    <div class="col-md-6">
        <p>
            @Html.ActionLink("Search", "Search")
        </p>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPhonebook", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
